<Page x:Class="Project.View.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.View"
      xmlns:conv="clr-namespace:Project.View.Converters"
      xmlns:vm="clr-namespace:Project.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailPage"
      Background="DarkGray">
    <Page.DataContext>
        <vm:DetailPageVM/>
    </Page.DataContext>
    <Page.Resources>
        <conv:IdToImageConverter x:Key="IdToImage"/>
        <conv:TypeListToString x:Key="TypeListToString"/>
        <conv:EmptyStringToZeroConverter x:Key="EmptyStringToZero"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <SolidColorBrush x:Key="BorderColor" Color="#2B2D53"/>
        </Grid.Resources>
        <!-- Detail page image -->
        <Grid Background="#540909">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="1.2*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="5" Grid.Column="1" Grid.Row="3">
                <Grid>
                    <Rectangle Fill="DarkGray"/>
                    <Image Margin="20 0" Source="{Binding CurrentCard.Id, Converter={StaticResource IdToImage}}" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="5" Grid.Column="1" Grid.Row="1">
                <Grid >
                    <Rectangle Fill="DarkGray"/>
                    <Image Margin="10 25" Width="auto" Source="{Binding CurrentCard.BigImage}" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

        </Grid>
        <!-- Separator -->
        <Rectangle Grid.Column="1" Fill="{StaticResource BorderColor}"/>
        <!-- Information panel -->

        <ScrollViewer Grid.Column="2">
            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <system:Double x:Key="HeaderSize">28</system:Double>
                    <system:Double x:Key="SubHeaderSize">20</system:Double>
                    <system:Double x:Key="PropertyNameSize">15</system:Double>
                    <system:Double x:Key="PropertyValueSize">15</system:Double>
                    <system:Double x:Key="PropertyDescriptionSize">13</system:Double>
                    <SolidColorBrush x:Key="BgColor" Color="DarkGray"/>
                    <SolidColorBrush x:Key="HeaderColor" Color="#2B2D53"/>
                    <SolidColorBrush x:Key="SubHeaderColor" Color="#2B2D53"/>
                    <SolidColorBrush x:Key="PropertyNameColor" Color="Black"/>
                    <SolidColorBrush x:Key="PropertyValueColor" Color="#4C4C4C"/>
                    <SolidColorBrush x:Key="UnderlineColor" Color="#540909"/>
                </Grid.Resources>
                <Rectangle Grid.ColumnSpan="3" Fill="{StaticResource BgColor}"/>
                <StackPanel Grid.Column="1">
                    <!-- General information -->
                    <TextBlock Margin="0 50 0 0" FontSize="{StaticResource HeaderSize}" HorizontalAlignment="Center" Foreground="{StaticResource HeaderColor}" 
                           Text="General Information" />
                    <Rectangle Margin="0 0 0 20" Height="3" Fill="{StaticResource UnderlineColor}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock FontSize="{StaticResource PropertyNameSize}" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Foreground="{StaticResource PropertyNameColor}" Text="Name:"/>
                        <TextBlock FontSize="{StaticResource PropertyNameSize}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Foreground="{StaticResource PropertyNameColor}" Text="Classification:"/>
                        <TextBlock FontSize="{StaticResource PropertyNameSize}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{StaticResource PropertyNameColor}" Text="Subtypes:">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=subtypeList, Path=ItemsSource}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource PropertyNameSize}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="{StaticResource PropertyNameColor}" Text="Types:">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=typeList, Path=ItemsSource}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock FontSize="{StaticResource PropertyValueSize}" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right" 
                               Foreground="{StaticResource PropertyValueColor}" Text="{Binding CurrentCard.Name}"/>
                        <TextBlock FontSize="{StaticResource PropertyValueSize}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" 
                               Foreground="{StaticResource PropertyValueColor}" Text="{Binding CurrentCard.SuperType}"/>
                        
                        <!-- Subtype list -->
                        <ListBox x:Name="subtypeList" ItemsSource="{Binding CurrentCard.SubTypes}" Grid.Column="2" Grid.Row="2"
                     Background="{StaticResource BgColor}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                             HorizontalContentAlignment="Right" IsHitTestVisible="False">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{StaticResource PropertyValueSize}" Foreground="{StaticResource PropertyValueColor}" Text="{Binding}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Type list -->
                        <ListBox x:Name="typeList" ItemsSource="{Binding CurrentCard.Types}" Grid.Column="2" Grid.Row="3"
                     Background="{StaticResource BgColor}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                             HorizontalContentAlignment="Right" IsHitTestVisible="False">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="{StaticResource PropertyValueSize}" Foreground="{StaticResource PropertyValueColor}" Text="{Binding}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>               

                    <!-- Ability list -->
                    <TextBlock Margin="0 50 0 0" FontSize="{StaticResource HeaderSize}" HorizontalAlignment="Center" Foreground="{StaticResource HeaderColor}" Text="Abilities">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=abilityList, Path=ItemsSource}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Rectangle Margin="0 0 0 20" Grid.Column="1" Height="3" Fill="{StaticResource UnderlineColor}">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=abilityList, Path=ItemsSource}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    <ListBox x:Name="abilityList" ItemsSource="{Binding CurrentCard.Abilities}" Grid.Row="2"
                     Background="{StaticResource BgColor}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                             HorizontalContentAlignment="Stretch" IsHitTestVisible="False">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock FontWeight="Bold" FontSize="{StaticResource SubHeaderSize}" Margin="0 0 0 10" Foreground="{StaticResource SubHeaderColor}" Text="{Binding AbilityName}"/>
                                    <TextBlock FontSize="{StaticResource PropertyNameSize}" Foreground="{StaticResource PropertyNameColor}" Text="Type: " Grid.Row="1" HorizontalAlignment="Left"/>
                                    <TextBlock FontSize="{StaticResource PropertyValueSize}" Foreground="{StaticResource PropertyValueColor}" Text="{Binding Type}" Grid.Row="1" HorizontalAlignment="Right"/>
                                    <TextBlock FontSize="{StaticResource PropertyNameSize}" Foreground="{StaticResource PropertyNameColor}" Text="Description: " Grid.Row="3" HorizontalAlignment="Left" Margin="0 0 0 5"/>
                                    <TextBlock FontSize="{StaticResource PropertyDescriptionSize}" Margin="0 0 0 20" Foreground="{StaticResource PropertyValueColor}" Text="{Binding Description}" Grid.Row="4" HorizontalAlignment="Left" TextWrapping="WrapWithOverflow"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Attack List -->
                    <TextBlock Margin="0 50 0 0" FontSize="{StaticResource HeaderSize}" HorizontalAlignment="Center" Foreground="{StaticResource HeaderColor}" Text="Attacks">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=attackList, Path=ItemsSource}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Rectangle Margin="0 0 0 20" Grid.Column="1" Height="3" Fill="{StaticResource UnderlineColor}">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=attackList, Path=ItemsSource}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    <ListBox x:Name="attackList" ItemsSource="{Binding CurrentCard.Attacks}" Grid.Row="2"
                     Background="{StaticResource BgColor}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                             HorizontalContentAlignment="Stretch" IsHitTestVisible="False">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock FontWeight="Bold" FontSize="{StaticResource SubHeaderSize}" Margin="0 0 0 10" Foreground="{StaticResource SubHeaderColor}" Text="{Binding AttackName}"/>
                                    <TextBlock FontSize="{StaticResource PropertyNameSize}" Foreground="{StaticResource PropertyNameColor}" Text="Cost: " Grid.Row="1" HorizontalAlignment="Left"/>
                                    <TextBlock FontSize="{StaticResource PropertyValueSize}" Foreground="{StaticResource PropertyValueColor}" Text="{Binding Cost, Converter={StaticResource TypeListToString}}" Grid.Row="1" HorizontalAlignment="Right"/>
                                    <TextBlock FontSize="{StaticResource PropertyNameSize}" Foreground="{StaticResource PropertyNameColor}" Text="Damage: " Grid.Row="2" HorizontalAlignment="Left"/>
                                    <TextBlock FontSize="{StaticResource PropertyValueSize}" Foreground="{StaticResource PropertyValueColor}" Text="{Binding Damage, Converter={StaticResource EmptyStringToZero}}" Grid.Row="2" HorizontalAlignment="Right"/>
                                    <TextBlock FontSize="{StaticResource PropertyNameSize}" Foreground="{StaticResource PropertyNameColor}" Text="Description: " Grid.Row="3" HorizontalAlignment="Left" Margin="0 0 0 5">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=descriptionText, Path=Text}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=descriptionText, Path=Text}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock x:Name="descriptionText" FontSize="{StaticResource PropertyDescriptionSize}" Margin="0 0 0 20" Foreground="{StaticResource PropertyValueColor}" Text="{Binding Description}" Grid.Row="4" HorizontalAlignment="Left" TextWrapping="WrapWithOverflow"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Rules List -->
                    <TextBlock Margin="0 50 0 0" FontSize="{StaticResource HeaderSize}" HorizontalAlignment="Center" Foreground="{StaticResource HeaderColor}" Text="Rules">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ruleList, Path=ItemsSource}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Rectangle Margin="0 0 0 20" Grid.Column="1" Height="3" Fill="{StaticResource UnderlineColor}">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ruleList, Path=ItemsSource}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>
                    <ListBox x:Name="ruleList" ItemsSource="{Binding CurrentCard.Rules}" Grid.Row="2"
                     Background="{StaticResource BgColor}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"
                             HorizontalContentAlignment="Stretch" IsHitTestVisible="False">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock FontSize="{StaticResource PropertyNameSize}" Margin="0 0 0 10" Foreground="{StaticResource PropertyNameColor}" Text="Rule: " Grid.Row="0" HorizontalAlignment="Left" Margin="0 0 0 5"/>
                                    <TextBlock FontSize="{StaticResource PropertyDescriptionSize}" Margin="0 0 0 20" Foreground="{StaticResource PropertyValueColor}" Text="{Binding}" Grid.Row="1" HorizontalAlignment="Left" TextWrapping="WrapWithOverflow"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
